# Loaded by interactive Python sessions via PYTHONSTARTUP environment
# variable.
#
# See http://docs.python.org/tutorial/interactive.html

import atexit
import os
import readline
import rlcompleter

# Enable auto-completion with the tab key.
readline.parse_and_bind('tab: complete')

# Store command history.
history_path = os.path.expanduser("~/.var/python_history")

def save_history(history_path=history_path):
    import readline
    readline.write_history_file(history_path)

if os.path.exists(history_path):
    readline.read_history_file(history_path)

atexit.register(save_history)

del os, atexit, readline, rlcompleter, save_history, history_path
